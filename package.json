{
  "name": "reasoning-memory-claude",
  "version": "1.0.0",
  "description": "Nature-inspired reasoning strategies and persistent memory for Claude Code",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "reasoning-memory-claude": "./dist/cli.js",
    "reasoning-memory-proxy": "./dist/proxy-cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "benchmark": "node dist/benchmarks/runner.js",
    "benchmark:offline": "node -e \"const{OfflineBenchmarkRunner}=require('./dist/benchmarks/offline-runner');(async()=>{const r=new OfflineBenchmarkRunner();const s=await r.runAll();console.log(r.formatSummary(s))})()\"",
    "benchmark:public": "ts-node src/benchmarks/run-public.ts",
    "start": "node dist/index.js",
    "proxy": "node dist/proxy-cli.js",
    "proxy:dev": "ts-node src/proxy-cli.ts"
  },
  "keywords": ["claude", "reasoning", "memory", "mcp"],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  }
}
